#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/vendor/autoload.php')) {
    require __DIR__.'/vendor/autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

if (!isset($argv[1])) {
    exit("You're missing a token");
}

$token = $argv[1];

$xray = new \Grafite\MissionControl\Xray($token);

$xray->analyzePerformance();
